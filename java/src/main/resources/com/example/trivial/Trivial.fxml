<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="30" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.trivial.TrivialController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Etiqueta para la pregunta -->
    <Label fx:id="preguntaLabel" text="Cargando pregunta..." textAlignment="CENTER"/>

    <!-- Cuadrícula para las opciones de respuesta -->
    <GridPane fx:id="opcionesGrid" hgap="15" vgap="15" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" minHeight="10.0"/>
            <RowConstraints vgrow="SOMETIMES" minHeight="10.0"/>
        </rowConstraints>
    </GridPane>

    <!-- Contenedor para el resultado y el botón de siguiente -->
    <HBox alignment="CENTER" spacing="20" minHeight="50">
        <Label fx:id="resultadoLabel"/>
        <Button fx:id="siguienteButton" onAction="#siguientePregunta" text="Siguiente" visible="false"/>
    </HBox>

</VBox>