{
  "name": "Java Senku Project",
  "image": "mcr.microsoft.com/devcontainers/java:11", 

  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "password": "vscode",
      "webVnc": true
    }
  },

  "forwardPorts": [5901, 6080],

  // ESTA LÍNEA ES LA MÁS IMPORTANTE PARA ESTE ERROR
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y maven libxtst6",

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack"
      ]
    }
  }
}